<div class="mx-auto my-10 max-w-7xl px-5 md:my-20">
  <article class="mx-auto max-w-3xl">
    <div class="max-w-lg mx-auto">
      <%= image_tag @board.board_image_url, class: 'object-contain w-full' %>
    </div>
    <div class="mt-5 md:mt-10">
      <h1 class="text-xl font-bold md:text-2xl"><%= @board.title %></h1>
      <p class="mt-3 md:text-lg"><%= @board.body %></p>
    </div>
  </article>
  <% if current_user.own?(@board) %>
    <div class="flex gap-5 justify-center mt-10 text-center">
      <%= link_to '編集する', edit_board_path, class: 'inline-block border border-sub-color max-w-[160px] w-full rounded px-4 py-2 bg-white cursor-pointer hover:bg-sub-color hover:text-white duration-300' %>
      <%= link_to '削除する', board_path(@board), data: {turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm')}, class: 'inline-block border border-sub-color max-w-[160px] w-full rounded px-4 py-2 bg-white cursor-pointer hover:bg-sub-color hover:text-white duration-300' %>
    </div>・
  <% end %>
  <div class="flex gap-5 justify-center mt-10 text-center">
    <%= link_to '一覧へ戻る', boards_path, class: 'inline-block border border-sub-color max-w-[160px] w-full rounded px-4 py-2 bg-white cursor-pointer hover:bg-sub-color hover:text-white duration-300' %>
  </div>
</div>
