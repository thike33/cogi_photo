<article class="border">
  <%= link_to '#', class: 'card' do %>
    <div class="aspect-video overflow-hidden">
      <%= image_tag 'no-image.jpg', class: 'w-full h-full duration-300 object-cover' %>
    </div>
    <div class="p-5">
      <h2 class="text-xl font-bold"><%= board.title %></h2>
      <p class="mt-2 text-base font-medium"><%= board.body %></p>
    </div>
  <% end %>
</article>
