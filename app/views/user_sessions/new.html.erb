<div class="mx-auto my-10 max-w-3xl w-full px-5 md:my-20">
  <h1 class="text-3xl text-center "><%= t('.title') %></h1>
  <%= form_with url: login_path, class: 'grid grid-cols-1 gap-5 mt-10' do |f| %>
    <div class="grid grid-cols-1 gap-3">
      <%= f.label :email, class: 'font-medium' %>
      <%= f.email_field :email, class: 'border border-sub-color rounded text-base p-2' %>
    </div>
    <div class="grid grid-cols-1 gap-3">
      <%= f.label :password, class: 'font-medium' %>
      <%= f.password_field :password, class: 'border border-sub-color rounded text-base p-2' %>
    </div>
    <div class="my-10 text-center">
      <%= f.submit t('.login'), class: 'inline-block border border-sub-color max-w-[160px] w-full rounded px-4 py-2 bg-white cursor-pointer hover:bg-sub-color hover:text-white duration-300' %>
    </div>
  <% end %>
</div>
